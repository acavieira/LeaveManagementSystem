@model IEnumerable<EmployeeListVM>
@{  
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => employee.FirstName)</td>
                <td>@Html.DisplayFor(m => employee.LastName)</td>
                <td>@Html.DisplayFor(m => employee.Email)</td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-userId="@employee.Id">View Allocations</a>
                </td>
            </tr>
        }
    </tbody>
</table>